       #filters {
    display: flex;
    flex-wrap: wrap;
    justify-content: center; /* Center align icons */
    gap: 0.8rem; /* Spacing between icons */
    align-items:  center;
}

.filter {
    width: 70px; /* Uniform width for all icons */
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: 5px;
    transition: all 0.3s ease-in-out;
    opacity: 0.8;
    margin-top: 2rem;
}

.filter:hover {
    opacity: 1;
    cursor: pointer;
    transform: scale(1.1); /* Slight zoom effect on hover */
}

.filter i {
    font-size: 20px; /* Slightly larger for better visibility */

    transition: color 0.3s ease-in-out;
}

.filter:hover i {
    color: black; /* Slightly darker blue on hover */
}

.filter p {
    font-size: 10px;
    font-weight: bold;
    text-align: center;
    word-wrap: break-word;
    white-space: normal; /* Allows text to wrap properly */
    line-height: 1.1; /* Improve spacing between lines */
}

/* Adjusting text layout for long names */
.filter p {
    display: flex;
    flex-direction: column;
    align-items: center;
}



.contaminated {
  border: 1px solid black;
  border-radius: 1rem;
  height:  3.25rem;
  padding: 0.5rem;
  margin-left: 2rem;
  display: flex;
  align-items: center;
}

</style>

