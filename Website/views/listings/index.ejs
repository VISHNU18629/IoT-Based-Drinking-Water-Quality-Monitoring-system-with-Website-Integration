<script>
  let Switch = document.getElementById("flexSwitchCheckDefault");
  Switch.addEventListener("click", ()=> {
    let waterAlert = document.getElementsByClassName("water-alert");
    for(info of waterAlert) {
      if(info.style.display != "inline") {
        info.style.display ="inline";

      } else {
        info.style.display ="none";
      }
     

    }
  });

</script>
    


